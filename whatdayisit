#JavaScript
document.querySelector('#check').addEventListener('click', check)

function check() {

  const day = document.querySelector('#day').value

  //Conditionals go here
if (day === "Tuesday" || day === "Thursday" || day === "thursday" || day === "tuesday") {
document.querySelector('#placeToSee').innerText = "Class Day"
}
else if (day === "Saturday" || day === "Sunday" || day === "sunday"|| day === "saturday") {
  document.querySelector('#placeToSee').innerText = "Weekend"
}
else if(day === "friday" || day === "Friday"){document.querySelector('#placeToSee').innerText = "Date Night"}
else { 
  document.querySelector('#placeToSee').innerText = "Boring"
}
}

